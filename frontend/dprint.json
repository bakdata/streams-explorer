{
  "$schema": "https://dprint.dev/schemas/v0.json",
  "incremental": true,
  "typescript": {
    "locked": true,
    "indentWidth": 2,
    "lineWidth": 80,
    "arguments.trailingCommas": "never",
    "parameters.trailingCommas": "never"
  },
  "json": {},
  "includes": [
    "**/*.{ts,tsx,js,jsx}",
    "./{package,tsconfig}.json"
  ],
  "excludes": [
    "**/node_modules",
    "./.next",
    "./out",
    "./components/api/fetchers.tsx"
  ],
  "plugins": [
    "https://plugins.dprint.dev/typescript-0.59.2.wasm",
    "https://plugins.dprint.dev/json-0.13.2.wasm"
  ]
}
