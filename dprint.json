{
  "$schema": "https://dprint.dev/schemas/v0.json",
  "incremental": true,
  "typescript": {
    "locked": true,
    "indentWidth": 2,
    "lineWidth": 80,
    "arguments.trailingCommas": "never",
    "parameters.trailingCommas": "never"
  },
  "json": {},
  "markdown": {},
  "dockerfile": {},
  "includes": [
    "**/*.{ts,tsx}",
    "grafana/*.json",
    "frontend/{package,tsconfig}.json"
  ],
  "excludes": ["**/node_modules", "frontend/build", "backend/.venv"],
  "plugins": [
    "https://plugins.dprint.dev/typescript-0.59.1.wasm",
    "https://plugins.dprint.dev/json-0.13.2.wasm",
    "https://plugins.dprint.dev/markdown-0.11.2.wasm",
    "https://plugins.dprint.dev/dockerfile-0.1.1.wasm"
  ]
}
